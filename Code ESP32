//Librarias para el display
#include <LiquidCrystal_I2C.h>

//Libreria para el sensor
#include <DHTesp.h>

//Declaramos nuestro objeto lcd, direccion I2C, columnas, filas
LiquidCrystal_I2C lcd(0x27, 16, 2);

//Declaramos sensor
DHTesp dht;

void setup() {
  //Iniciamos nuestra pantalla
  lcd.init();
  //Colocamos luz de fondo
  lcd.backlight();
  //Configurar el sensor
  dht.setup(15, DHTesp::DHT22); 
}

void loop() {
  //Leer los datos de temperatura y humedad
  float temperatura = dht.getTemperature();
  float humedad = dht.getHumidity();

  //Desplegarlos en pantalla temperatura fila 1 
  //, humedad fila 2
  lcd.setCursor(0,1);
  lcd.println(temperatura);
  lcd.setCursor(0,1);
  lcd.println(humedad);
  //Si la temperatura es mayor a 50 limpia 
  //pantalla y muestra un mensaje de alerta
    if (temperatura > 50) {
    lcd.clear(); //Limpiar pantalla
    lcd.println("Temperatura Alta!");
  } else {
    lcd.setCursor(0,0);
    lcd.println(temperatura);
    lcd.setCursor(0,1);
    lcd.println(humedad);
  }
  //Espera 2 segundos
  delay(2000);
  lcd.clear();
}
